@model SongDto

<form class="form-group" method="post" asp-action="AddSong">
	<input asp-for="AlbumId" />
	<div class="form-group">

		<label class="form-label" asp-for="Title"></label>
		<input class="form-control" type="text" asp-for="Title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group ">

		<label class="form-label" asp-for="LengthInSeconds"></label>
		<input class="form-control" asp-for="LengthInSeconds"></input>
		<span asp-validation-for="LengthInSeconds" class="text-danger"></span>
	</div>

	<div>
		<button>Submit</button>
	</div>

</form>